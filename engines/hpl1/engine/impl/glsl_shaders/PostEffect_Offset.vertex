///////////////////////////////////////////////////////
/// SPECULAR BUMPMAPPING 2D VERTEX PROGRAM ////////////
///////////////////////////////////////////////////////

in vec4 position;
in vec3 uv;

out vec4 vPos;
out vec3 vUv;

uniform mat4 worldViewProj;

void main()
{
	vPos = (worldViewProj * position);
	vUv = uv;
}
